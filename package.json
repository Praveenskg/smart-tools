{
  "name": "smart-tools",
  "version": "1.0.8",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out",
    "format": "prettier --write .",
    "prepare": "husky",
    "postbuild": "next-sitemap",
    "safe-upgrade": "npx npm-check-updates -u && npm install",
    "test": "echo 'No tests configured yet. Run npm run test:setup to set up testing.'",
    "test:setup": "npm install --save-dev jest @testing-library/react @testing-library/jest-dom jest-environment-jsdom",
    "test:ci": "npm run test",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security": "npm audit --audit-level=moderate",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "@google/genai": "^1.22.0",
    "@hookform/resolvers": "^5.2.2",
    "@serwist/next": "^9.2.1",
    "@types/qrcode": "^1.5.5",
    "@vercel/analytics": "^1.5.0",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "exifr": "^7.1.3",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.22",
    "next": "^15.5.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "qrcode": "^1.5.4",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-easy-crop": "^5.5.3",
    "react-hook-form": "^7.64.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.2.1",
    "rehype-highlight": "^7.0.2",
    "remove-markdown": "^0.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/estree": "^1.0.8",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "serwist": "^9.1.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "ci",
          "build",
          "revert"
        ]
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-max-length": [
        2,
        "always",
        100
      ],
      "body-max-line-length": [
        2,
        "always",
        100
      ]
    }
  }
}
