echo "🚀 Running pre-push checks..."

# Run type check
echo "🔍 Type checking..."
npm run type-check || {
  echo "❌ TypeScript errors found. Push aborted."
  echo "💡 Run 'npm run type-check' to see type errors"
  exit 1
}

# Run linting
echo "🔧 Linting..."
npm run lint || {
  echo "❌ Linting errors found. Push aborted."
  echo "💡 Run 'npm run lint:fix' to auto-fix issues"
  exit 1
}

# Security audit
echo "🔒 Security audit..."
npm audit --audit-level=moderate || {
  echo "❌ Security vulnerabilities found. Push aborted."
  echo "💡 Run 'npm audit fix' to auto-fix issues"
  exit 1
}

echo "✅ All pre-push checks passed!"
